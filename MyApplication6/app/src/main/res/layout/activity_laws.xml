    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="15dp"
        android:text="The Indian Penal Code, lays down the provisions to penalise the culprit for the heinous offences against women.The various sections are:-"
